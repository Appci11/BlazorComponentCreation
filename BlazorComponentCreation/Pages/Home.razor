        Temp1.Add("Du");
        Temp1.Add("Gaideliai");
        Temp1.Add("Trys");
        Temp1.Add("Test1");
        List<String> Temp2 = new List<String>();
        Temp2.Add("Keturi");
        Temp2.Add("Saule");
        Temp2.Add("Penki");
        Temp2.Add("Test2");
        Eilutes.Add(Temp1);
        Eilutes.Add(Temp2);
        List<String> Temp3 = new List<String>();
        Eilutes.Add(Temp3);
        Temp3.Add("Test3");
        loaded = true;
    }

    protected async Task LabelPositionChanged()
    {
        StateHasChanged();
    }
}