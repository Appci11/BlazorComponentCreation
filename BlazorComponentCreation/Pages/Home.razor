@page "/"
@using MyLabComponent.Shared

<PageTitle>Home</PageTitle>

<h1>Sarasu testavimas</h1>

@if (loaded)
{
    <MyComponent ColNames=Pavadinimai StringValues=Eilutes OnLabelPositionChanged="LabelPositionChanged" Size="big"/>

    @foreach (var eils in Eilutes)
    {
        @foreach(var eil in eils)
        {
            <p>@eil</p>
        }
        <p>------------</p>
    }
}

